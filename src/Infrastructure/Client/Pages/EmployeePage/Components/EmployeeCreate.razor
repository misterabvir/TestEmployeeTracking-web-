<div class="row mb-2">
    <div class="col-sm-6 col-md-3">
        <input class="form-control" type="text" @bind-value=_employee.FirstName placeholder="FirstName" />
    </div>
    <div class="col-sm-6 col-md-3">
        <input class="form-control" type="text" @bind-value=_employee.LastName placeholder="LastName" />
    </div>
    <div class="col-sm-6 col-md-3">
        <select class="form-control" @bind=_employee.DepartmentId>
            <option value="">not selected</option>
            @if (Departments is not null)
            {
                @foreach (var item in Departments)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            }
        </select>
    </div>
    <div class="col-sm-6 col-md-auto">
        <button class="btn btn-primary" @onclick=@CreateHandler disabled="@IsDisabled">Create</button>
    </div>
</div>